<UserControl x:Class="ODAF.SilverlightApp.TwitterUserBadge"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Height="49" Width="137" >
        
        <Grid x:Name="LayoutRoot" Background="Transparent" 
          HorizontalAlignment="Right" 
          VerticalAlignment="Top">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="52"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        

            
            
       

<!--MouseLeftButtonUp="TwitterImage_MouseLeftButtonUp"-->
        <Image x:Name="twitterImage" Grid.ColumnSpan="2" 
                Grid.Row="0" 
                   Source="Images/TwitterSignin.png" 
                   Height="38" Width="137" Stretch="None"/>


        <TextBlock x:Name="screenNameText" 
                   Foreground="White" 
                   VerticalAlignment="Center" 
                   Grid.Column="0" 
                   Visibility="Collapsed">

        </TextBlock>
        
        <Image x:Name="userImage" 
               Margin="2" Width="36" Height="36" 
               HorizontalAlignment="Right"  
               VerticalAlignment="Center" 
               Visibility="Collapsed"
               Grid.Column="1">
        </Image>

        

    </Grid>
</UserControl>
