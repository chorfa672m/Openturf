<controls:ChildWindow x:Class="ODAF.SilverlightApp.UserControls.ConfirmDeleteWin"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"   
           Title="Really Delete?">


    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Height="80" TextWrapping="Wrap" >Are you sure you want to delete this landmark? There is no turning back.</TextBlock>

        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center">
            <Button x:Name="OKButton" Click="OKButton_Click" Content="OK" Width="75" HorizontalAlignment="Center" Margin="4"  />
            <Button x:Name="CancelButton" Click="CancelButton_Click" Content="Cancel" Width="75" HorizontalAlignment="Center" Margin="4"  />
        </StackPanel>
    </Grid>
</controls:ChildWindow>